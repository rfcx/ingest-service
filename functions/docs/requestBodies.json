{
  "Stream": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "A stream id",
        "example": "xu82jDgX49"
      },
      "name": {
        "type": "string",
        "description": "A stream name",
        "example": "My Stream 1"
      },
      "latitude": {
        "type": "float",
        "description": "A stream coordinate",
        "example": 90.123
      },
      "longitude": {
        "type": "float",
        "description": "A stream coordinate",
        "example": 125.912
      },
      "altitude": {
        "type": "float",
        "description": "A stream coordinate",
        "example": 30.40
      },
      "description": {
        "type": "string",
        "description": "A stream description",
        "example": "Stream 1 description"
      },
      "is_public": {
        "type": "boolean",
        "description": "Whether stream is public (default false)",
        "default": "false"
      }
    },
    "required": [
      "name",
      "latitude",
      "longitude"
    ]
  },
  "StreamPatch": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "A stream name",
        "example": "My Stream 1"
      },
      "latitude": {
        "type": "float",
        "description": "A stream coordinate",
        "example": 90.123
      },
      "longitude": {
        "type": "float",
        "description": "A stream coordinate",
        "example": 125.912
      },
      "description": {
        "type": "string",
        "description": "A stream description",
        "example": "Stream 1 description"
      },
      "is_public": {
        "type": "boolean",
        "description": "Whether stream is public",
        "example": false
      }
    },
    "required": []
  },
  "Uploads": {
    "type": "object",
    "properties": {
      "filename": {
        "type": "string",
        "description": "A stream name",
        "example": "My Stream 1"
      },
      "timestamp": {
        "type": "date",
        "description": "A update date (iso 8601)",
        "example": "2020-11-16T09:03:24.928Z"
      },
      "stream": {
        "type": "string",
        "description": "A stream id",
        "example": "xu82jDgX49"
      },
      "sampleRate": {
        "type": "number",
        "description": "A stream sample rate",
        "example": 24000
      },
      "targetBitrate": {
        "type": "number",
        "description": "A stream target bitrate",
        "example": 24000
      },
      "checksum": {
        "type": "string",
        "description": "Checksum",
        "example": "xxxxxxx"
      }
    },
    "required": [
      "filename",
      "timestamp",
      "stream",
      "checksum"
    ]
  }
}
